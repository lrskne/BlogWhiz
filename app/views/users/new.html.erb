<h1>Users#new</h1>
<%= form_for @user do |f| %>
  <% if @user.errors.any? %>
    <ul>
      <% @user.errors.full_messages.each do | msg | %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>
  <div>
    <%= f.label :email %></br>
    <%= f.text_field :email %>
  </div>

  <div>
    <%= f.label :password %></br>
    <%= f.password_field :password %>
  </div>

  <div>
    <%= f.label :password_confirmation %></br>
    <%= f.password_field :password_confirmation %>
  </div>

  <%= f.submit %>
<% end %>
